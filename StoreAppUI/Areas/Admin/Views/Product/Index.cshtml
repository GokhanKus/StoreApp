@model IEnumerable<Product>
<div class="text-center">
	<div class="display-6">Products</div>

	<div class="d-flex justify-content-end my-3">
		<a class="btn btn-outline-success" asp-action="Create">
			<i class="fa-solid fa-plus"></i>
			Create
		</a>
	</div>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Image Url</th>
				<th>Product Name</th>
				<th>Price</th>
				<th>Operations</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Product prd in Model)
			{
				<tr>
					<td>@prd.Id</td>
					<td>
						<img class="border border-light rounded" src="/img/@prd.ImageUrl " alt="@prd.ImageUrl" width="50" />
					</td>
					<td>@prd.ProductName</td>
					<td>@prd.Price.ToString("c")</td> @*para sembolu*@
					<td>
						<div class="btn-group gap-2">
							<a class="btn btn-warning"
							data-toggle="tooltip"data-placement="top"title="Edit"
							asp-action="Update"asp-route-id="@prd.Id">
								<i class="fa fa-edit"></i>
							</a>
							<a class="btn btn-info"
							   data-toggle="tooltip" data-placement="top" title="Details" target="_blank" 
							   asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.Id">
								@*mevcut areanın disina cikinca asp-area=""*@
								<i class="fa fa-search"></i>
							</a>
							<a class="btn btn-danger"
							   data-toggle="tooltip" data-placement="top" title="Delete"
							   asp-action="Delete" asp-route-id="@prd.Id">
								<i class="fa fa-trash"></i>
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts 
{	
	<script type="text/javascript">
		$(document).ready(() => {			//document, sayfasin kendisini ifade eder
			$('[data-toggle="tooltip"]').tooltip()
		});		
	</script>
}
