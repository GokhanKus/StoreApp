@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="Id"/>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="ViewBag.Categories" asp-for="CategoryId">
            @* @foreach (Category cat in ViewBag.Categories) {<option value="@cat.Id">@cat.CategoryName</option>}
            =>Create controllerda select list tanimladigimiz icin foreache gerek yok onun yerine (asp-items="ViewBag.Categories" asp-for="CategoryId")*@
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="/img/@Model?.ImageUrl"/>
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control" />
    </div>
    @* <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" /> *@

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa-regular fa-floppy-disk"></i>
                Update
            </button>

            <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>

</form>


