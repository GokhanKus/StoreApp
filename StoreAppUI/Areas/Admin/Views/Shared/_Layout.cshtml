<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>StoreApp - @ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/StoreAppUI.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
	@*asp-append-version=true yaparsak onbellekleme islemi yapilmis olur sayfa daha hizli calisir? *@
</head>
<body>
	<header>
		@* @await Html.PartialAsync("_Navbar") *@
		<partial name="_Navbar" />

		@RenderSection("Header", false)
	</header>
	<div class="container">
		<div>
			@await Html.PartialAsync("_Notification")
			@* <partial name="_Notification" /> *@
		</div>
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		@RenderSection("Footer", false)
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/font-awesome/js/all.min.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)@*@Section Scripts{}*@
</body>
</html>
