@page
@model DemoModel
<div class="text-center my-5">
	<div class="display-6">Hello @Model.FullName</div>
	<p class="text-danger">@HttpContext.Session.GetString("name")</p>
	<form method="post" asp-page="/Demo">
		<div class="form-group">
			<input class="form-control" name="name" placeholder="enter your name" />
			<input class="btn btn-primary my-3" type="submit" />
		</div>
	</form>
</div>