@model Product
@* @using StoreAppUI.ExtensionMethods;  viewimporta tanimlayalim.*@

<div class="col-md-4 my-3 col-sm-6">
	@*col-sm ekran boyutu kucukse row basına 2 urun getir md(medium ise row basına 3 tane getir vs.)*@
	<div class="card" style="width: 18rem;">
		<img src="/img/@Model.ImageUrl?" class="card-img-top" alt="...">
		<div class="card-body">
			<h5 class="card-title">@Model.ProductName</h5>
			<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
			<div class="btn-group">
				<form id="@Model.Id" asp-page="/Cart" method="post">@*cart.cshtml.cs sayfasindaki onpost metodu calisir.(asp-page-handler)*@
					<input type="hidden" asp-for="Id" />
					<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" /> @*continue shoppingten sonra user bir onceki sayfaya donecek*@
					<button type="submit" class="btn btn-outline-primary">
						<i class="fa-solid fa-cart-plus"></i>
					</button>
				</form>
				<a asp-action="Get" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
					<i class="fa-solid fa-arrow-right"></i>
					Details
				</a>
			</div>
		</div>
	</div>
</div>